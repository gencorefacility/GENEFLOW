{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": [
    "dev"
  ],
  "packageRules": [
    {
      "fileMatch": ["main.nf"],
      "matchManagers": ["regex"],
      "matchStrings": [
        "container\\s+['\"](?<depName>docker:\\/\\/.*):(?<currentValue>.*)['\"]"
      ]
    }
  ]
}
