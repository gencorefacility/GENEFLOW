{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for a conda environment, including pip dependencies.",
  
  "extends": [
    "config:recommended"
  ],
  
  "managers": {
    "conda": {
      "fileMatch": [
        "**/env.yml"
      ]
    },
    "pip": {
      "fileMatch": [
        "**/env.yml"
      ]
    }
  }
}

